<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="teamtwo.event.com.events.RegisterActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/topBar"
                android:paddingTop="10dp">

                <ImageButton
                    android:layout_width="92dp"
                    android:layout_height="124dp"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/drawing2"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Register"
                    android:id="@+id/tvRegister"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:typeface="normal"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/etUsername"
                    android:hint="Username"
                    android:paddingTop="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/etName"
                    android:hint="Name"
                    android:paddingTop="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/etSurname"
                    android:hint="Surname"
                    android:paddingTop="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/etPassword1"
                    android:hint="Password"
                    android:paddingTop="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/etPassword2"
                    android:hint="Please Repeat Password"
                    android:paddingTop="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/etEmail"
                    android:hint="E-mail"
                    android:paddingTop="20dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerButtonHolder"
                    android:paddingTop="20dp">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign Up!"
                        android:id="@+id/btSignup" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
     </ScrollView>


</RelativeLayout>
